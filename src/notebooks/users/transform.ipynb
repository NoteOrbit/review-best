      "source": [
        "# Databricks notebook source\n",
        "\n",
        "from pyspark.sql.functions import col, lit, when\n",
        "from pyspark.sql.utils import AnalysisException\n",
        "\n",
        "# Define the path to the input Delta table\n",
        "input_path = \"/delta/users_raw\"\n",
        "\n",
        "# Define the path to the output Delta table\n",
        "output_path = \"/delta/users_transformed\"\n",
        "\n",
        "try:\"",
        "    print(f\"Reading raw users data from {input_path}...\")\n",
        "    # Read the raw data from the Delta table\n",
        "    df = spark.read.format(\"delta\").load(input_path)\n",
        "    print(f\"Successfully read {df.count()} rows from {input_path}.\")\n",
        "\n",
        "    # --- Data Quality Checks ---"",
        "    # Drop rows with null values in critical columns\n",
        "    critical_columns = [\"user_id\", \"name\", \"email\", \"age\"]\n",
        "    initial_count = df.count()\n",
        "    df_cleaned = df.na.drop(subset=critical_columns)\n",
        "    cleaned_count = df_cleaned.count()\n",
        "\n",
        "    if initial_count > cleaned_count:\n",
        "        print(f\"Dropped {initial_count - cleaned_count} rows due to null values in critical columns.\")\n",
        "    else:\n",
        "        print(\"No null values found in critical columns.\")\n",
        "\n",
        "    # Filter out users with non-positive age\n",
        "    df_cleaned = df_cleaned.filter(col(\"age\") > 0)\n",
        "    filtered_count = df_cleaned.count()\n",
        "    if cleaned_count > filtered_count:\n",
        "        print(f\"Dropped {cleaned_count - filtered_count} rows due to non-positive age.\")\n",
        "    else:\n",
        "        print(\"No users with non-positive age found.\")\n",
        "\n",
        "    # --- Transformations ---"",
        "    print(\"Performing transformations...\")\n",
        "    # Example: Standardize country codes, add a derived column for age group\n",
        "    df_transformed = df_cleaned.withColumn(\"country_standardized\", \n",
        "                                   when(col(\"country\") == \"USA\", \"US\")\n",
        "                                   .when(col(\"country\") == \"United Kingdom\", \"GB\")\n",
        "                                   .otherwise(col(\"country\")))\n",
        "\n",
        "    df_transformed = df_transformed.withColumn(\"age_group\", \n",
        "                                             when(col(\"age\") < 18, \"<18\")\n",
        "                                             .when((col(\"age\") >= 18) & (col(\"age\") <= 24), \"18-24\")\n",
        "                                             .when((col(\"age\") >= 25) & (col(\"age\") <= 34), \"25-34\")\n",
        "                                             .when((col(\"age\") >= 35) & (col(\"age\") <= 44), \"35-44\")\n",
        "                                             .when((col(\"age\") >= 45) & (col(\"age\") <= 54), \"45-54\")\n",
        "                                             .when((col(\"age\") >= 55) & (col(\"age\") <= 64), \"55-64\")\n",
        "                                             .otherwise(\">64\"))\n",
        "\n",
        "    # Select and reorder columns if necessary\n",
        "    df_transformed = df_transformed.select(\"user_id\", \"name\", \"email\", \"age\", \"age_group\", \"country\", \"country_standardized\", \"registration_date\")\n",
        "    print(\"Transformations complete.\")\n",
        "\n",
        "    # --- Write Transformed Data ---"",
        "    print(f\"Writing transformed users data to {output_path}...\")\n",
        "    df_transformed.write.format(\"delta\").mode(\"overwrite\").save(output_path)\n",
        "    print(f\"Successfully transformed users data and saved to {output_path}.\")\n",
        "\n",
        "except AnalysisException as e:\n",
        "    print(f\"Error reading or writing Delta table: {e}\")\n",
        "    print(\"Please ensure the input path exists and has valid Delta table data.\")\n",
        "except Exception as e:\n",
        "    print(f\"An unexpected error occurred: {e}\")\n"
      ]
    }
